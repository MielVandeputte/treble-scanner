{
  "name": "treble-scanner",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "check:format": "prettier --check \"**/*.{js,tsx,ts,css,jsx,json}\"",
    "check:lint": "eslint .",
    "check": "npm run check:format && npm run check:lint",
    "fix:format": "prettier --write \"**/*.{js,tsx,ts,css,jsx,json}\"",
    "fix:lint": "eslint . --fix",
    "fix": "npm run fix:format && npm run fix:lint",
    "test:vitest": "vitest",
    "test:playwright": "npx playwright test",
    "test": "npm run test:vitest && npm run test:playwright",
    "generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 public/logo.svg",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "@fontsource/proza-libre": "^5.2.7",
    "clsx": "^2.1.1",
    "motion": "^12.23.16",
    "qr-scanner": "^1.4.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.1",
    "store2": "^2.14.4"
  },
  "devDependencies": {
    "@playwright/test": "^1",
    "@tailwindcss/vite": "^4",
    "@testing-library/react": "^16",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/parser": "^8",
    "@vite-pwa/assets-generator": "^1",
    "@vitejs/plugin-react": "^5",
    "autoprefixer": "^10",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9",
    "eslint-config-prettier": "^10",
    "eslint-plugin-import": "^2",
    "eslint-plugin-prettier": "^5",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^5",
    "eslint-plugin-react-refresh": "^0",
    "eslint-plugin-unicorn": "^61",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0",
    "typescript": "^5",
    "typescript-eslint": "^8",
    "vite": "^7",
    "vite-plugin-pwa": "^1",
    "vitest": "^3"
  }
}
