{
  "name": "treble-scanner",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "check:format": "prettier --check \"**/*.{js,tsx,ts,css,jsx,json}\"",
    "check:lint": "eslint .",
    "check": "npm run check:format && npm run check:lint",
    "fix:format": "prettier --write \"**/*.{js,tsx,ts,css,jsx,json}\"",
    "fix:lint": "eslint . --fix",
    "fix": "npm run fix:format && npm run fix:lint",
    "test:vitest": "vitest",
    "test:playwright": "npx playwright test",
    "test": "npm run test:vitest && npm run test:playwright",
    "generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 public/logo.svg",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "@fontsource/proza-libre": "5.2.7",
    "clsx": "2.1.1",
    "motion": "12.23.22",
    "qr-scanner": "1.4.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "7.63.0",
    "react-router-dom": "7.9.3",
    "store2": "2.14.4"
  },
  "devDependencies": {
    "@playwright/test": "1.55.1",
    "@tailwindcss/vite": "4.1.13",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.5.2",
    "@types/react": "19.1.15",
    "@types/react-dom": "19.1.9",
    "@typescript-eslint/parser": "8.44.1",
    "@vite-pwa/assets-generator": "1.0.1",
    "@vitejs/plugin-react": "5.0.4",
    "autoprefixer": "10.4.21",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.22",
    "eslint-plugin-unicorn": "61.0.2",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vite": "7.1.7",
    "vite-plugin-pwa": "1.0.3",
    "vitest": "3.2.4"
  }
}
